CXX = hipcc
CXXFLAGS = -O2 -std=c++23

SRCS = gpu_bfs.cpp utils.cpp csv_writer.cpp benchmark.cpp
HDRS = utils.hpp csv_writer.hpp benchmark.hpp

# Object files
OBJS := $(SRCS:.cpp=.o)

# Executable name
TARGET = benchmark_bfs_gpu.out

# Default rule
all: $(TARGET)

# Link objects to create executable
$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) $^ -o $@

# Compile .cpp files into .o files
%.o: %.cpp $(HDRS)
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Clean rule to remove build files
clean:
	rm -f $(OBJS) $(TARGET)
